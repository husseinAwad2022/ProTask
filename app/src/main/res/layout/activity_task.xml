<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_dynamic_tertiary20"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/design_default_color_secondary_variant"
            android:gravity="center"
            android:text="Text Details"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/txtviewTask"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/txtviewTime"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="text"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/txtviewDate"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:ems="10"
            android:gravity="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtComp"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/material_dynamic_primary40"
            android:gravity="center|center_horizontal"
            android:shadowColor="@color/design_default_color_error"
            android:text="Edit"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:background="@color/design_default_color_error"
            android:text="Delete"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorAccent"
            android:text="Complete"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnHome"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Home"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>